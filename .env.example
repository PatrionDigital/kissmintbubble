# Supabase Configuration
# Get these from your Supabase project settings > API
# https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your-project-url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
NEXT_PUBLIC_SUPABASE_SERVICE_ROLE_KEY=your-service-role-key # For server-side operations

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_ENV=development # development, staging, production

# Farcaster Configuration
NEXT_PUBLIC_FARCASTER_DEVELOPER_MNEMONIC=your-mnemonic-phrase
NEXT_PUBLIC_FARCASTER_DEVELOPER_FID=your-fid

# Wallet Configuration
NEXT_PUBLIC_WALLETCONNECT_PROJECT_ID=your-walletconnect-project-id

# Feature Flags
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_MAINTENANCE_MODE=false

# API Keys (for external services)
# NEXT_PUBLIC_ALCHEMY_API_KEY=your-alchemy-api-key
# NEXT_PUBLIC_INFURA_API_KEY=your-infura-api-key
# NEXT_PUBLIC_ETHERSCAN_API_KEY=your-etherscan-api-key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100 # Max requests per window per IP

# CORS Configuration
NEXT_PUBLIC_CORS_ORIGINS=http://localhost:3000,https://your-production-domain.com

# Sentry (Error Tracking)
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn
NEXT_PUBLIC_SENTRY_ENVIRONMENT=development

# Vercel (if deploying to Vercel)
VERCEL_URL=your-vercel-url
VERCEL_ENV=development
VERCEL_GIT_COMMIT_SHA=git-commit-sha

# Testing (for test environment)
# NODE_ENV=test
# TEST_DATABASE_URL=postgresql://user:password@localhost:5432/your_test_db
